@{
    ViewData["Title"] = "Home Page";
}
@model DoAnPM_TH_.ViewModels.HomeViewModel

<style>
    .rounded-12 {
        border-radius: 12px;
    }

    .w-fit {
        width: fit-content;
    }

    .text-blue {
        color: #1250DC;
    }

    .main__slider img {
        border-radius: 12px;
    }

    .main__feature-cate .card img {
        width: 24px;
    }

    .main__feature-cate a {
        color: black;
    }

    .main__product {
        background-color: #fcf2ea;
    }

    .product-title {
        display: -webkit-box; 
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3; 
        overflow: hidden;
    }

    .product-img {
        padding: 12px;
    }

    .main__doctor {
        background-image: url('../images/home_bgdoctor.png');
        height: 276px;
        border-radius: 20px;
    }

</style>

<div class="main__slider container pt-4">
    <div class="row align-items-center">
        <div id="carouselExampleAutoplaying" class="carousel slide col-8" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/banner1.png" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner2.png" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner3.png" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner4.png" class="d-block w-100" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="col-4">
            <img src="~/images/banner5.png" class="mb-3"/>
            <img src="~/images/banner6.png" />
        </div>
    </div>
</div>
<div class="main__feature container pt-4">
    <div class="d-flex align-items-center mb-2 fw-500">
        <img src="~/images/danh_muc_noi_bat.png" class="me-2"/>
        Danh mục nổi bật
    </div>
    <div class="main__feature-cate">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-2 pt-3">
                    <a class="card card-body align-items-center rounded-12 justify-content-center" style="height: 126px;">
                        <img src="@Url.Content("~/images/CategoryImages/" + category.CateImg)" />
                        <div class="text-center mt-2">
                            <div class="fw-500 font-14">
                                @category.CateName
                            </div>
                            <div class="opacity-50 font-14">
                                @category.CateProductCount sản phẩm
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="main__product mt-4 pb-4">
    <div class="main__product-list container">
        <div class="title text-center position-relative">
            <img src="~/images/title.png" />
            <div class="position-absolute top-50 start-50 translate-middle text-white fw-500">
                Sản phẩm bán chạy
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-6 g-4 mb-3 mt-1">
            @foreach (var product in Model.Products.Take(8))
            {
                <div class="col">
                    <div class="card">
                        <img src="@Url.Content("~/images/ProductImages/" + product.ProImg)" class="card-img-top product-img" alt="Product Image" />
                        <div class="card-body">
                            <h5 class="card-title product-title font-14">@product.ProName</h5>
                        </div>
                        <div class="px-3">
                            <div class="mb-1">
                                <div class="font-14 text-blue">
                                    <span>@($"{product.Price:N0}đ")</span>
                                    <span class=""> / Hộp</span>
                                </div>
                            </div>
                            <button type="button" class="add-to-cart btn btn-primary rounded-pill w-100 mb-3"
                                    data-id="@product.ProId"
                                    data-name="@product.ProName"
                                    data-price="@product.Price"
                                    data-img="@Url.Content("~/images/ProductImages/" + product.ProImg)">
                                Chọn mua
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
<div class="main__doctor container position-relative mt-4 mb-4">
    <img src="~/images/home_bgdoctor2.png" class="position-absolute top-0 end-0"/>
    <div class="container pt-4">
        <h3 class="text-white fw-500">Chuyên trang bệnh & sức khỏe</h3>
        <p class="text-white font-16">Tổng hợp thông tin và kiến thức chuyên sâu về các lĩnh vực sức khỏe</p>
        <a href="@Url.Action("Doctor", "Home")" class="btn btn-light rounded-pill mb-3 text-blue">
            Tìm hiểu thêm
        </a>
    </div>
</div>

