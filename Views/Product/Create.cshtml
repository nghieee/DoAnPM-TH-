@model DoAnPM_TH_.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">

<style>
    .form-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        padding: 30px;
    }
    
    .form-header {
        border-bottom: 2px solid #f8f9fa;
        margin-bottom: 25px;
        padding-bottom: 15px;
    }
    
    .required-field::after {
        content: "*";
        color: red;
        margin-left: 4px;
    }
    
    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
    
    .custom-file-input {
        cursor: pointer;
    }
    
    .preview-image {
        max-width: 200px;
        max-height: 200px;
        margin-top: 10px;
        border-radius: 5px;
    }
    
    .price-input-group {
        position: relative;
    }
    
    .price-input-group::after {
        content: "VNĐ";
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }
    
    .form-floating {
        margin-bottom: 1rem;
    }
    
    .btn-submit {
        padding: 10px 30px;
        font-weight: 500;
    }
    
    .form-section {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
</style>

<div class="container my-5">
    <div class="form-container">
        <div class="form-header">
            <h2 class="text-center">
                <i class="fas fa-plus-circle me-2"></i>
                @ViewData["Title"]
            </h2>
        </div>

        <form asp-action="Create" method="post" enctype="multipart/form-data" id="createProductForm">
            <div class="row">
                <!-- Thông tin cơ bản -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h5 class="mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            Thông tin cơ bản
                        </h5>
                        
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="ProName" name="ProName" 
                                   placeholder="Nhập tên sản phẩm" required>
                            <label for="ProName" class="required-field">Tên sản phẩm</label>
                        </div>

                        <div class="form-floating mb-3">
                            <div class="price-input-group">
                                <input type="number" class="form-control" id="Price" name="Price" 
                                       step="1000" min="0" required placeholder="Nhập giá">
                                <label for="Price" class="required-field">Giá</label>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="Quantity" name="Quantity" 
                                   min="0" required placeholder="Nhập số lượng">
                            <label for="Quantity" class="required-field">Số lượng</label>
                        </div>
                    </div>
                </div>

                <!-- Thông tin chi tiết -->
                <div class="col-md-6">
                    <div class="form-section">
                        <h5 class="mb-3">
                            <i class="fas fa-list-alt me-2"></i>
                            Thông tin chi tiết
                        </h5>

                        <div class="mb-3">
                            <label for="BrandId" class="form-label required-field">Thương hiệu</label>
                            <select class="form-select select2" id="BrandId" name="BrandId" required>
                                <option value="">Chọn thương hiệu</option>
                                @foreach (var brand in ViewBag.Brands ?? new List<SelectListItem>())
                                {
                                    <option value="@brand.Value">@brand.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="CateId" class="form-label required-field">Danh mục</label>
                            <select class="form-select select2" id="CateId" name="CateId" required>
                                <option value="">Chọn danh mục</option>
                                @foreach (var category in ViewBag.Categories ?? new List<SelectListItem>())
                                {
                                    <option value="@category.Value">@category.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Mô tả và hình ảnh -->
                <div class="col-12">
                    <div class="form-section">
                        <h5 class="mb-3">
                            <i class="fas fa-image me-2"></i>
                            Mô tả và hình ảnh
                        </h5>

                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Hình ảnh sản phẩm</label>
                            <input type="file" class="form-control" id="ImageFile" name="ImageFile" 
                                   accept="image/*" onchange="previewImage(this);">
                            <img id="imagePreview" class="preview-image d-none" alt="Preview">
                        </div>

                        <div class="mb-3">
                            <label for="Descript" class="form-label">Mô tả chi tiết</label>
                            <textarea class="form-control" id="Descript" name="Descript" 
                                      rows="4" placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="button" class="btn btn-secondary me-2" onclick="window.history.back();">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </button>
                <button type="submit" class="btn btn-primary btn-submit">
                    <i class="fas fa-save me-2"></i>Thêm sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function() {
        // Initialize Select2
        $('.select2').select2({
            theme: 'bootstrap-5',
            width: '100%'
        });

        // Form validation
        $('#createProductForm').on('submit', function(e) {
            e.preventDefault();
            
            // Custom validation
            let isValid = true;
            let price = $('#Price').val();
            let quantity = $('#Quantity').val();

            if (parseInt(price) < 0) {
                alert('Giá không được âm');
                isValid = false;
            }

            if (parseInt(quantity) < 0) {
                alert('Số lượng không được âm');
                isValid = false;
            }

            if (isValid) {
                this.submit();
            }
        });

        // Format price input
        $('#Price').on('input', function() {
            let value = $(this).val();
            value = value.replace(/[^0-9]/g, '');
            $(this).val(value);
        });
    });

    // Image preview
    function previewImage(input) {
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                $('#imagePreview')
                    .attr('src', e.target.result)
                    .removeClass('d-none');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>