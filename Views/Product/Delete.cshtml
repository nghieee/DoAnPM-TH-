@model DoAnPM_TH_.Models.Product
@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .delete-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .card {
        border: none;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 10px;
    }
    
    .card-header {
        background: #dc3545;
        color: white;
        border-radius: 10px 10px 0 0 !important;
    }
    
    .warning-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }
    
    .product-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin: 20px 0;
    }
    
    .detail-item {
        margin-bottom: 10px;
        padding: 8px;
        border-bottom: 1px solid #dee2e6;
    }
    
    .detail-label {
        font-weight: bold;
        color: #6c757d;
    }
    
    .btn-group {
        gap: 10px;
    }
    
    .btn {
        padding: 10px 30px;
        font-weight: 500;
        transition: all 0.3s;
    }
    
    .btn:hover {
        transform: translateY(-2px);
    }
    
    .warning-text {
        color: #dc3545;
        font-weight: 500;
    }
    
    .alert {
        border-radius: 8px;
        margin-top: 20px;
    }
</style>

<div class="container my-5">
    <div class="delete-container">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewData["Title"]
                </h2>
            </div>
            
            <div class="card-body text-center">
                <i class="fas fa-exclamation-circle warning-icon"></i>
                
                <h4 class="mb-4 warning-text">
                    Bạn có chắc chắn muốn xóa sản phẩm này?
                </h4>
                
                <div class="product-details">
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-box me-2"></i>Mã sản phẩm:
                        </div>
                        <div class="col-md-8">@Model.ProId</div>
                    </div>
                    
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-tag me-2"></i>Tên sản phẩm:
                        </div>
                        <div class="col-md-8">@Model.ProName</div>
                    </div>
                    
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-money-bill me-2"></i>Giá:
                        </div>
                        <div class="col-md-8">@String.Format("{0:N0} đ", Model.Price)</div>
                    </div>
                    
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-cubes me-2"></i>Số lượng:
                        </div>
                        <div class="col-md-8">@Model.Quantity</div>
                    </div>
                    
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-building me-2"></i>Thương hiệu:
                        </div>
                        <div class="col-md-8">@(Model.Brand?.BrandName ?? "Không có")</div>
                    </div>
                    
                    <div class="row detail-item">
                        <div class="col-md-4 detail-label">
                            <i class="fas fa-folder me-2"></i>Danh mục:
                        </div>
                        <div class="col-md-8">@(Model.Cate?.CateName ?? "Không có")</div>
                    </div>
                </div>
                
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Cảnh báo:</strong> Thao tác này không thể hoàn tác. Tất cả dữ liệu liên quan đến sản phẩm này sẽ bị xóa vĩnh viễn.
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" name="ProId" value="@Model.ProId" />
                    <div class="btn-group">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirmDelete()">
                            <i class="fas fa-trash-alt me-2"></i>Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
function confirmDelete() {
    return confirm('Bạn có thực sự chắc chắn muốn xóa sản phẩm này không?');
}
</script>